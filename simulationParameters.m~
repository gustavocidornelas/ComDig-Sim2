function [ scenario, numBits, MaxEb_N0_dB,N0,   ] = simulationParameters(  )
%% Função simulationParameters()
% Função para o carregamento de todos os parâmetros para a simulação em
% questão. Pela edição desta função, escolhem-se:
%      - O cenário simulado
%      - A quantidade de bits enviados
%      - Quais valores de Eb/N0 são avaliados

%% Escolha do cenário simulado: canal e equalização
% Escolha feita a partir do valor da variável scenario. 
%       scenario = 1: Canal AWGN
%       scenario = 2: Canal h[k] = (1/sqrt(2))*delta[k] + (j/2)*delta[k-1] - (1/2)*delta[k-2] sem equalização
%       scenario = 3: SC-FDE com canal h[k] e equalização ZF
%       scenario = 4: SC-FDE com canal h[k] e equalização MMSE
scenario = 4; 

if scenario ~= 1 || scenario ~= 2 || scenario ~= 3 || scenario ~= 4
    display('O valor de scenario deve ser de 1, 2 3 ou 4. Ler descrição em simulationParameters() para mais informações.')
end

%% Escolha da quantidade de bits enviados
numBits = 10^5;

%% Escolha dos valores de Eb/N0 simulados
MaxEb_N0_dB = 12; % Valor máximo de Eb/N0 em dB (simulação de 0 dB até MaxEb_N0_dB)

Eb = 1/2; % Para que Es = 1
Eb_N0_dB = [0:MaxEb_N0_dB]; % Vetor de Eb/N0
Eb_N0_lin = 10.^(Eb_N0_dB/10); % Eb/N0 em W
N0 = Eb./(Eb_N0_lin); % Vetor com os valores de N0 em W/Hz

BER = zeros(1, MaxEb_N0_dB); % Vetor que armazena as taxas de erro de bit para cada Eb/N0
end

